{
  "name": "markdown-inline-svg",
  "displayName": "Markdown Inline SVG",
  "description": "Inlines SVG images in VSCode's Markdown Preview.",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "saeris",
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/markdown-inline-svg.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true
  },
  "scripts": {
    "build": "vsce package",
    "bundle": "rolldown ./extension.cjs -d dist -f cjs -e vscode -s",
    "watch": "npm run bundle -- -w",
    "release": "vsce publish",
    "test": "vitest",
    "vscode:prepublish": "npm run bundle"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.9.1",
    "@types/vscode": "^1.105.0",
    "@vscode/vsce": "3.6.2",
    "markdown-it": "^14.1.0",
    "markdown-it-testgen": "^0.1.6",
    "rolldown": "^1.0.0-beta.43",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
